{
  "name": "pokedex",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "codegen:main": "apollo client:codegen --target typescript --includes=\"./src/graphql/pokeapi/**/*.ts\" --outputFlat --endpoint=\"https://beta.pokeapi.co/graphql/v1beta\" \"src/__generated__\"",
    "codegen:auth": "apollo client:codegen --target typescript --includes=\"./src/graphql/auth-api/**/*.ts\" --outputFlat --endpoint=\"https://frontend-engineer-onboarding-api-thxaa.ondigitalocean.app/graphql\" \"src/__generated__\"",
    "codegen": "concurrently \"yarn codegen:main\" \"yarn codegen:auth\""
  },
  "dependencies": {
    "@apollo/client": "^3.5.10",
    "@chakra-ui/react": "^1.8.6",
    "@emotion/react": "^11",
    "@emotion/styled": "^11",
    "@fontsource/inter": "^4.5.5",
    "@fontsource/public-sans": "^4.5.3",
    "@heroicons/react": "^1.0.6",
    "@hookform/resolvers": "^2.8.8",
    "framer-motion": "^6",
    "graphql": "15.5.3",
    "next": "12.1.0",
    "next-auth": "^4.3.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-hook-form": "^7.28.0",
    "yup": "^0.32.11",
    "zustand": "^3.7.1"
  },
  "devDependencies": {
    "@types/graphql": "^14.5.0",
    "@types/node": "17.0.21",
    "@types/react": "17.0.40",
    "apollo": "^2.33.9",
    "concurrently": "^7.0.0",
    "eslint": "8.11.0",
    "eslint-config-next": "12.1.0",
    "typescript": "4.6.2"
  },
  "resolutions": {
    "graphql": "15.5.3",
    "**/graphql": "15.5.3"
  }
}
